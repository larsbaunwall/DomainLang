{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build domain-lang (language)",
            "command": "npm run langium:generate && npm run build --workspace packages/language",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/dsl/domain-lang"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Langium: Generate grammar and build the domain-lang language",
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "server-process"
            }
        }
    ]
}
