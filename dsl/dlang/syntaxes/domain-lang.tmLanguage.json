{
  "name": "domain-lang",
  "scopeName": "source.domain-lang",
  "fileTypes": [
    ".dlang"
  ],
  "patterns": [
    {
      "name": "keyword.control.domain-lang",
      "match": "\\b(BoundedContext|businessModel|Classification|classifier|classifiers|contains|ContextMap|decision|decisions|description|Domain|domainClassifier|evolution|in|is|means|partof|policy|Role|roleClassifier|rule|term|terminology|where)\\b"
    },
    {
      "name": "keyword.symbol.domain-lang",
      "match": "(\\,|\\{|\\})"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.domain-lang",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.domain-lang"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.domain-lang"
            }
          }
        },
        {
          "begin": "(^\\s+)?(?=//)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.cs"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.domain-lang"
        }
      ]
    }
  }
}