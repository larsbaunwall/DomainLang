{
    "name": "dlang",
    "displayName": "dlang",
    "description": "description",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "domain-lang",
            "aliases": ["DomainLang", "domain-lang"],
            "extensions": [".dlang"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "domain-lang",
            "scopeName": "source.domain-lang",
            "path": "./syntaxes/domain-lang.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:domain-lang"
    ],
    "main": "./out/extension.js",
    "langium": {
        "languageId": "domain-lang",
        "grammar": "src/language-server/domain-lang.langium",
        "extensions": [".dlang"],
        "out": "src/language-server/generated",
        "textMate": {
            "out": "syntaxes/domain-lang.tmLanguage.json"
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "webpack",
        "watch": "webpack --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "generate-build": "npm run langium:generate && npm run build"
    },
    "dependencies": {
        "langium": "^0.1.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "copy-webpack-plugin": "^9.0.0",
        "eslint": "^7.19.0",
        "langium-cli": "^0.1.0",
        "source-map-loader": "^3.0.0",
        "ts-loader": "^9.2.3",
        "typescript": "^4.1.3",
        "webpack": "^5.39.1",
        "webpack-cli": "^4.7.2"
    }
}
