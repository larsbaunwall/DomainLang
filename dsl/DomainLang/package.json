{
    "name": "domain-lang",
    "version": "0.0.1",
    "displayName": "DomainLang",
    "description": "A DSL for Domain-Driven Design",
    "publisher": "larslb",
    "license": "MIT",
    "keywords": [
        "ddd",
        "domain-driven design",
        "langium",
        "dlang"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/larslb/DomainLang"
    },
    "bugs": {
        "url": "https://github.com/larslb/DomainLang/issues"
    },
    "files": [
        "bin"
    ],
    "type": "module",
    "scripts": {
        "build": "tsc -b tsconfig.json && node esbuild.mjs",
        "watch": "concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\"",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "vscode:prepublish-old": "npm run build && npm run lint",
        "vscode:prepublish": "npm run esbuild-base -- --minify && npm run lint",
        "esbuild-base": "esbuild ./src/extension/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node"
    },
    "dependencies": {
        "chalk": "~5.3.0",
        "commander": "~11.0.0",
        "langium": "~2.1.0",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/node": "~16.18.41",
        "@types/vscode": "~1.67.0",
        "@typescript-eslint/eslint-plugin": "~6.4.1",
        "@typescript-eslint/parser": "~6.4.1",
        "concurrently": "~8.2.1",
        "esbuild": "^0.19.11",
        "eslint": "~8.47.0",
        "langium-cli": "~2.1.0",
        "typescript": "~5.1.6"
    },
    "engines": {
        "vscode": "^1.67.0",
        "node": ">=16.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "domain-lang",
                "aliases": [
                    "DomainLang",
                    "domain-lang"
                ],
                "extensions": [
                    ".dlang"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "domain-lang",
                "scopeName": "source.domain-lang",
                "path": "syntaxes/domain-lang.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:domain-lang"
    ],
    "main": "./out/extension/main.cjs",
    "bin": {
        "domain-lang-cli": "./bin/cli.js"
    }
}
