{
    "private": true,
    "name": "domainlang",
    "version": "0.1.0",
    "displayName": "DomainLang",
    "description": "A DSL for Domain-Driven Design",
    "publisher": "DomainLang",
    "author": "larsbaunwall",
    "license": "Apache License 2.0",
    "icon": "images/icon.png",
    "keywords": [
        "ddd",
        "domain-driven design",
        "langium",
        "dlang"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/DomainLang/DomainLang"
    },
    "bugs": {
        "url": "https://github.com/DomainLang/DomainLang/issues"
    },
    "engines": {
        "vscode": "^1.67.0"
    },
    "scripts": {
        "clean": "npm run clean --workspaces",
        "watch": "tsc -b tsconfig.build.json --watch",
        "build": "tsc -b tsconfig.build.json && npm run build --workspaces",
        "build:clean": "npm run clean && npm run build",
        "bundle": "npm run build --workspace packages/demo",
        "vscode:prepublish": "npm run --workspace packages/extension vscode:prepublish",
        "langium:generate": "npm run --workspace packages/language langium:generate",
        "langium:watch": "npm run --workspace packages/language langium:watch",
        "test": "npm run --workspace packages/language test",
        "test:coverage": "npm run --workspace packages/language test:coverage",
        "lint": "eslint packages --ext .ts,.tsx",
        "lint:fix": "eslint packages --ext .ts,.tsx --fix"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/node": "~20.17.48",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint": "^9.0.0",
        "shx": "~0.4.0",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.52.0"
    },
    "volta": {
        "node": "20.19.2",
        "npm": "10.8.2"
    },
    "workspaces": [
        "packages/language",
        "packages/cli",
        "packages/extension",
        "packages/demo"
    ]
}
