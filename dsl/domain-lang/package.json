{
    "private": true,
    "name": "domain-lang",
    "version": "0.0.5",
    "displayName": "DomainLang",
    "description": "A DSL for Domain-Driven Design",
    "publisher": "thinkability",
    "author": "larsbaunwall",
    "license": "Apache License 2.0",
    "icon": "images/icon.png",
    "keywords": [
        "ddd",
        "domain-driven design",
        "langium",
        "dlang"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/larsbaunwall/DomainLang"
    },
    "bugs": {
        "url": "https://github.com/larsbaunwall/DomainLang/issues"
    },
    "scripts": {
        "clean": "npm run clean --workspaces",
        "watch": "tsc -b tsconfig.build.json --watch",
        "build": "tsc -b tsconfig.build.json && npm run build --workspaces",
        "build:clean": "npm run clean && npm run build",
        "bundle": "npm run build --workspace packages/demo",
        "vscode:prepublish": "npm run --workspace packages/extension vscode:prepublish",
        "langium:generate": "npm run --workspace packages/language langium:generate",
        "langium:watch": "npm run --workspace packages/language langium:watch",
        "test": "npm run --workspace packages/language test"
    },
    "devDependencies": {
        "@types/node": "~20.17.48",
        "shx": "~0.4.0",
        "typescript": "~5.8.3"
    },
    "volta": {
        "node": "20.19.2",
        "npm": "10.8.2"
    },
    "workspaces": [
        "packages/language",
        "packages/cli",
        "packages/extension",
        "packages/demo"
    ]
}
