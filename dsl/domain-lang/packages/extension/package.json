{
    "name": "vscode-domain-lang",
    "description": "The extension specific package",
    "version": "0.0.1",
    "displayName": "domain-lang",
    "type": "module",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "domain-lang",
            "aliases": ["DomainLang", "domain-lang"],
            "extensions": [".dlang"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "domain-lang",
            "scopeName": "source.domain-lang",
            "path": "syntaxes/domain-lang.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:domain-lang"
    ],
    "main": "./out/extension/main.cjs",
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out syntaxes",
        "vscode:prepublish": "npm run build",
        "build:prepare": "shx mkdir -p ./syntaxes/ && shx cp -f ../language/syntaxes/domain-lang.tmLanguage.json ./syntaxes/domain-lang.tmLanguage.json",
        "build": "npm run build:prepare && tsc -b tsconfig.json && node esbuild.mjs",
        "build:clean": "npm run clean && npm run build",
        "watch": "npm run build:prepare && concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\""
    },
    "dependencies": {
        "domain-lang-language": "0.0.1",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/node": "~20.17.48",
        "@types/vscode": "~1.67.0",
        "concurrently": "~8.2.1",
        "esbuild": "~0.25.5",
        "shx": "~0.4.0",
        "typescript": "~5.8.3"
    },
    "vsce": {
      "dependencies": false
    }
}
