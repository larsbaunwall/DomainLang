{
    "name": "domain-lang-language",
    "description": "The language specific package",
    "version": "0.0.1",
    "type": "module",
    "engines": {
        "node": ">=20.10.0",
        "npm": ">=10.2.3"
    },
    "files": [
        "out",
        "src"
    ],
    "main": "./out/index.js",
    "module": "./out/index.js",
    "exports": {
        ".": {
            "types": "./out/index.d.ts",
            "default": "./out/index.js"
        },
        "./syntaxes/domain-lang.monarch.js": {
            "types": "./out/syntaxes/domain-lang.monarch.d.ts",
            "default": "./out/syntaxes/domain-lang.monarch.js"
        },
        "./syntaxes/domain-lang.monarch": {
            "types": "./out/syntaxes/domain-lang.monarch.d.ts",
            "default": "./out/syntaxes/domain-lang.monarch.js"
        },
        "./src/services/git-url-resolver.js": {
            "browser": "./src/services/git-url-resolver.browser.js",
            "default": "./src/services/git-url-resolver.js"
        }
    },
    "typesVersions": {
        "*": {
            ".": [
                "out/index"
            ]
        }
    },
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out",
        "build": "tsc -b tsconfig.src.json",
        "build:clean": "npm run clean && npm run build",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "test": "vitest run"
    },
    "dependencies": {
        "langium": "~4.1.0"
    },
    "devDependencies": {
        "@types/node": "~20.17.48",
        "@vitest/coverage-v8": "^3.1.4",
        "langium-cli": "~4.1.0",
        "shx": "~0.4.0",
        "typescript": "~5.8.3",
        "vitest": "~3.1.3"
    },
    "volta": {
        "node": "20.19.2",
        "npm": "10.8.2"
    }
}
